{
    "typescript.tsdk": "./node_modules/typescript/lib",

    "search.exclude": {
        "**/dist": true,
        "**/node_modules": true,
        "**/out": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/*.js": {
			"when": "**/core/$(basename).ts"
		}
    },
    "files.trimTrailingWhitespace": true,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.formatOnSave": true,
    "eslint.validate": [
        "javascript",
        "typescript"
    ]
}